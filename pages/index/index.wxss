/**index.wxss**/
.row{
	width: 100%;
	float: left;
}
/*-- our cleafix hack -- */ 
 .row:before, 
.row:after {
  content:"";
  display: table ;
  clear:both;
}

.bar{
  width: 100%;
  height: 120rpx;
  position: fixed;
  left: 0;top:0; 
}
.bar image{
  width: 100%;
  height: 120rpx;
  
}
.main{
  width: 750rpx;
  height: 1200rpx;
  margin-top: 120rpx;
  overflow-y: auto; 
}
.slide-image{
  width: 100%;
  height:440rpx;
}
.list{
  width: 100%;
}
.listBar{
  width: 100%;
  height: 30rpx;
  font-size: 30rpx;
  color: rgb(51, 51, 51);
  margin: 20rpx 0;
  margin-left: 200rpx;
}
.listBar image{
  width: 60rpx;
  height: 12rpx;
  margin: 6rpx 12rpx;
}
.more{
  width: 96rpx;
  height: 30rpx;
  font-size: 24rpx;
  color: rgb(168,140,82);
  margin-left: 100rpx;
}
.temp{
  width: 690rpx;
  height: 280rpx;
  padding: 20rpx 0rpx;
  border-bottom: rgb(221,221,221) solid 1rpx;
  /* float: left; */
}
.temp:last-child{
  border-bottom: none
}
.temp image{
  width: 175rpx;
  height: 210rpx;
  margin: 45rpx;
  float: left;
}
.font{
  margin-left: 30rpx;
  width: 350rpx;
  float: left;
  margin-top: 60rpx;
  margin-right: 0;

}
.temp text{
  display: block;
}
.brand{
  font-size: 32rpx;
  
}
.name{
  font-size: 28rpx;
}
.price{
  font-size: 26rpx;
  margin-top: 65rpx;
}
.off{
  font-size: 22rpx;
  color: rgb(255,33,91)
}
.triangle-right {
    width: 0;
    height: 0;
    border-top: 16rpx solid transparent;
    border-left: 32rpx solid #000;
    border-bottom: 16rpx solid transparent;
    float: left;
    margin-top: 200rpx;
}
.specialList{
  margin-top: 30rpx;
}
.cover{
  width: 100%;
  display: block;
  height: 280rpx;
  border-top: 12rpx solid rgb(221, 221, 221) ;
  margin-top: 30rpx;
}
.specialList scroll-view{
  width: 100%;
  height: 392rpx;
  white-space: nowrap;
  overflow-y: hidden; 
}
.image-lists{
  width: 200rpx;
  height: 232rpx;
  margin: 20rpx 30rpx;
  margin-bottom: 0rpx;
}
.show{
  width: 260rpx;
  height: 352rpx;
  margin: 20rpx;
  display: inline-block; 
}
.show-name{
  font-size: 24rpx;
  color: rgb(102, 102, 102);
  width: 200rpx;
  height: 28rpx;
  line-height: 28rpx;
  margin-left: 30rpx;
  overflow: hidden;
}
.show-price{
  font-size: 24rpx;
  font-weight: bold;
  width: 100rpx;
  display: inline-block;
  color: rgb(51, 51, 51);
  margin-left: 30rpx;
}
.show-off{
  font-size: 20rpx;
  margin-left: 30rpx;
  color: rgb(55, 62, 68);
}
.scroll-view_H{
  width: 100%;
  white-space: nowrap;
}
.scroll-view-item_H{
  display: inline-block;
}
